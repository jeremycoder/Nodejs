<% include ./partials/header.ejs %>

<div class="ui container title-container">
  <div class="ui huge header index-page">The Beautiful Blogs</div>
</div>


<% blogs.forEach(function(blog){ %>

  <div class="ui main text container segment">
    <h2><%= blog.title %></h2>
      <div class="ui image">
        <img class="index-blog-img" src="<%= blog.image %>">
      </div>
    
    <p><%= blog.created.toDateString() %></p>
    <p><%- blog.body.substring(0, 200) %>...</p>
    <p><a href="/blogs/<%- blog._id %>">Read more</a></p>
  </div>

<% }); %>

<% include ./partials/footer.ejs %>