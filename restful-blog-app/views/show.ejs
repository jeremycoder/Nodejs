<% include ./partials/header.ejs %>

<div class="ui main text container segment new-page">
  <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
      <div class="item">
        <img class="ui centered rounded image" src="<%= blog.image %>">
        <div class="content">
          <p><%= blog.created.toDateString() %></p>
        </div>
        <div class="description">
            <p><%- blog.body %></p>
        </div>
        <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
          <button class="ui red basic button">Delete Blog</button>
        </form>
      </div>
      
      
        
    </div>
   
   <p><a href="/blogs">Back to All Blogs</a></p>
    
    
</div> <!-- ui main text container segment -->

<% include ./partials/footer.ejs %>